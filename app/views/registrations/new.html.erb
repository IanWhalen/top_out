<% content_for :content do %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
  <% end %>
  
  <p><%= f.email_field :email, :placeholder => "Email" %></p>

  <p><%= f.password_field :password, :placeholder => "Password" %></p>

  <p><%= f.password_field :password_confirmation, :placeholder => "Password confirmation" %></p>

  <p><%= f.submit "Sign up" %></p>
  <br/>
<% end %>

<p>Have an account? <%= link_to "Sign in here!", new_registration_path(resource_name) %></p>
<% end %>
