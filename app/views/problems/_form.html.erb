<%= form_for(@problem) do |f| %>
  <% if @problem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@problem.errors.count, "error") %> prohibited this problem from being saved:</h2>

      <ul>
      <% @problem.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.select :color_one, @colors.map {|k, v| k}, {:prompt => "Select first color"}, {:"data-native-menu" => "false"} %>
  </div>
  <div class="field">
    <%= f.select :color_two, @colors.map {|k, v| k}, {:prompt => "Select second color"}, {:"data-native-menu" => "false"} %>
  </div>
  <div class="field">
    <%= f.select :color_three, @colors.map {|k, v| k}, {:prompt => "Select third color"}, {:"data-native-menu" => "false"} %>
  </div>
  <div class="field">
    <%= f.text_field :difficulty, :id => 'difficulty', :placeholder => 'Difficulty' %>
  </div>
  <div class="field">
    <%= f.label :is_live %>
    <%= f.check_box :is_live %>
  </div>
  <div class="field">
    <%= f.collection_select :wall_id, @walls, :id, :gym_plus_wall_name, {:prompt => "Select a wall"}, {:"data-native-menu" => "false", :id => "wall_select"} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
