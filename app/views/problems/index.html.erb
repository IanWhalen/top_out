<h1>Listing problems</h1>

<table>
  <tr>
    <th>Color one</th>
    <th>Color two</th>
    <th>Color three</th>
    <th>Difficulty</th>
    <th>Is live</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @problems.each do |problem| %>
  <tr>
    <td><%= problem.color_one %></td>
    <td><%= problem.color_two %></td>
    <td><%= problem.color_three %></td>
    <td><%= problem.difficulty %></td>
    <td><%= problem.is_live %></td>
    <td><%= link_to 'Show', problem %></td>
    <td><%= link_to 'Edit', edit_problem_path(problem) %></td>
    <td><%= link_to 'Destroy', problem, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

