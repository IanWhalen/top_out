<% content_for :content do %>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <p><%= f.email_field :email, :placeholder => "Email" %></p>

  <p><%= f.password_field :password, :placeholder => "Password" %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "Sign in" %></p>
  <br/>
<% end %>

<p>Don't have an account? <%= link_to "Sign up!", new_registration_path(resource_name) %><br /></p>

<p>Forgot your password? <%= link_to "Get it here.", new_password_path(resource_name) %><br /></p>

<% end %>
