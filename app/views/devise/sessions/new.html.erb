<% content_for :content do %>
  <h4 id="account-manage-title">Sign in now!</h4>
  <p>Just type in your email and password below so you can start tracking your climbing.</p>
  
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <p><%= f.email_field :email, :id => "email", :placeholder => "Email address" %></p>

  <p><%= f.password_field :password, :id => "password", :placeholder => "Password" %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "Sign in" %></p>
  <br/>
<% end %>

<p><%= link_to "Sign up", new_registration_path(resource_name) %> if you don't have any account.</p>

<p>Forgot your password? <%= link_to "Reset it here.", new_password_path(resource_name) %><br/></p>

<% end %>
