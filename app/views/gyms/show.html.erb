<% content_for :header do %>
  <h1><%= @gym.name %></h1>
<% end %>

<% content_for :content do %>
  <ul data-role="listview">
    <li data-role="list-divider">Your Progress</li>
    <li> <%= link_to "Unsolved Problems",  %> </li>
    <li> <%= link_to "Unsent Routes",  %> </li>

    <li data-role="list-divider">Bouldering Walls</li>
    <% @gym.walls.each do |wall| %>
      <li> <%= link_to wall.name, wall %> </li>
    <% end %>
  </ul>
<% end %>
