<% content_for :header do %>
  <h1><%= @gym.name %></h1>
<% end %>

<% content_for :content do %>
  <ul data-role="listview">
    <li data-role="list-divider">Unsolved Problems</li>
    <% if current_user %>
      <%= render :partial => 'shared/problem', :collection => current_user.unsolved_problems(@gym) %>
    <% else %>
      <%= render :partial => 'shared/problem', :collection => @gym.all_live_problems %>
    <% end %>
  </ul>
<% end %>
