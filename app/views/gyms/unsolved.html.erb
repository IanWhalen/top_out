<% content_for :header do %>
  <h1><%= @gym.name %></h1>
<% end %>

<% content_for :content do %>
  <div id="unsolved-problem-list" data-role="content">
  <ul data-role="listview">
    
    <li data-role="list-divider">Unsolved Problems</li>

    <% if current_user %>
      <%= render :partial => 'problem', :collection => current_user.unsolved_problems(@gym).sort %>
    <% else %>
      <%= render :partial => 'problem', :collection => @gym.all_live_problems.sort %>
    <% end %>
  
  </ul>
  </div>

  <script>
    $('.unsolved_problem').live('ajax:success', function(evt, data, status, xhr) {
      if (data.sign_in_needed) {
        $.mobile.changePage(data.sign_in_needed, "slide", false, true);
      } else {
        $(<%= "'#unsolved_problem_#{problem.id}'" %>).closest('li').remove();
        return false;
      }
    });
  </script>

<% end %>
